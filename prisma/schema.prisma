generator client {
  provider   = "prisma-client"
  output     = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "mysql"
}

enum UserType {
  EMPLOYEE
  COMPANY
}

enum ApplicationStatus {
  PENDING
  REJECTED
  CANCELLED
  IN_CONSIDERATION
}

enum JobPostStatus {
  OPEN
  CLOSED
}

enum JobPostQuestionType {
  RADIO
  TEXT
  TEXTAREA
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  user_type UserType
  employee  Employee?
  company   Copmany?

  @@map("users")
}

model Employee {
  id           Int           @id @default(autoincrement())
  userId       Int           @unique
  user         User          @relation(fields: [userId], references: [id])
  firstName    String
  lastName     String
  country_code String?
  phone        String?
  applications Application[]
  imgPath      String?
  positionId   Int?
  position     Position?     @relation(fields: [positionId], references: [id])
  countryId    Int?
  country      Country?      @relation(fields: [countryId], references: [id])
  cityId       Int?
  city         City?         @relation(fields: [cityId], references: [id])
  skills       Skill[]

  @@map("user_profiles")
}

model Position {
  id        Int        @id @default(autoincrement())
  title     String
  employees Employee[]
}

model Copmany {
  id          Int       @id @default(autoincrement())
  name        String
  website     String?
  userId      Int       @unique
  user        User      @relation(fields: [userId], references: [id])
  description String?
  location    String?
  jobPosts    JobPost[]
  imgPath     String?
  countryId   Int?
  country     Country?  @relation(fields: [countryId], references: [id])
  cityId      Int?
  city        City?     @relation(fields: [cityId], references: [id])

  @@map("company_profiles")
}

model JobPost {
  id           Int           @id @default(autoincrement())
  title        String
  description  String
  companyId    Int
  company      Copmany       @relation(fields: [companyId], references: [id])
  applications Application[]
  status       JobPostStatus @default(OPEN)
  jobPostForm  JobPostForm?
  created_at   DateTime      @default(now()) @db.Timestamp(3)
  skills       Skill[]

  @@map("job_posts")
}

model Application {
  id                 Int                  @id @default(autoincrement())
  employeeId         Int
  employee           Employee             @relation(fields: [employeeId], references: [id])
  jobPostId          Int
  jobPost            JobPost              @relation(fields: [jobPostId], references: [id])
  status             ApplicationStatus    @default(PENDING)
  jobPostFormAnswers JobPostFormAnswers[]

  @@map("applications")
}

model JobPostForm {
  id                 Int                  @id @default(autoincrement())
  requireCV          Boolean
  questions          Question[]
  jobPostFormAnswers JobPostFormAnswers[]
  jobPostId          Int                  @unique
  jobPost            JobPost              @relation(fields: [jobPostId], references: [id])

  @@map("job_post_forms")
}

model Question {
  id            Int                 @id @default(autoincrement())
  label         String
  isRequired    Boolean
  jobPostFormId Int
  jobPostForm   JobPostForm         @relation(fields: [jobPostFormId], references: [id])
  type          JobPostQuestionType
  options       QuestionOptions[]
  answers       Answer[]

  @@map("questions")
}

model QuestionOptions {
  id         Int      @id @default(autoincrement())
  value      String
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])

  @@map("radio_question_options")
}

model Answer {
  id                   Int                @id @default(autoincrement())
  jobPostFormAnswersId Int
  jobPostFormAnswers   JobPostFormAnswers @relation(fields: [jobPostFormAnswersId], references: [id])
  questionId           Int
  question             Question           @relation(fields: [questionId], references: [id])
  value                String

  @@map("answers")
}

model JobPostFormAnswers {
  id            Int         @id @default(autoincrement())
  CVFilePath    String?
  answers       Answer[]
  jobPostFormId Int
  jobPostForm   JobPostForm @relation(fields: [jobPostFormId], references: [id])
  applicationId Int
  application   Application @relation(fields: [applicationId], references: [id])

  @@map("job_post_form_answers")
}

model Country {
  id        Int        @id @default(autoincrement())
  name      String
  employees Employee[]
  copmanies Copmany[]
}

model City {
  id        Int        @id @default(autoincrement())
  name      String
  employees Employee[]
  copmanies Copmany[]
}

model Skill {
  id        Int        @id @default(autoincrement())
  name      String
  employees Employee[]
  jobPosts  JobPost[]
}
