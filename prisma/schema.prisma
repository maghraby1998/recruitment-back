generator client {
  provider   = "prisma-client"
  output     = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "mysql"
}

enum UserType {
  EMPLOYEE
  COMPANY
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

enum JobPostStatus {
  OPEN
  CLOSED
}

enum JobPostQuestionType {
  RADIO
  TEXT
  TEXTAREA
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  user_type UserType
  employee  Employee?
  company   Copmany?

  @@map("users")
}

model Employee {
  id           Int           @id @default(autoincrement())
  userId       Int           @unique
  user         User          @relation(fields: [userId], references: [id])
  firstName    String
  lastName     String
  country_code String?
  phone        String?
  applications Application[]

  @@map("user_profiles")
}

model Copmany {
  id          Int       @id @default(autoincrement())
  name        String
  website     String?
  userId      Int       @unique
  user        User      @relation(fields: [userId], references: [id])
  description String?
  location    String?
  jobPosts    JobPost[]

  @@map("company_profiles")
}

model JobPost {
  id           Int           @id @default(autoincrement())
  title        String
  description  String
  companyId    Int
  company      Copmany       @relation(fields: [companyId], references: [id])
  applications Application[]
  status       JobPostStatus @default(OPEN)
  jobPostForm  JobPostForm?

  @@map("job_posts")
}

model Application {
  id                 Int                  @id @default(autoincrement())
  employeeId         Int
  employee           Employee             @relation(fields: [employeeId], references: [id])
  jobPostId          Int
  jobPost            JobPost              @relation(fields: [jobPostId], references: [id])
  status             ApplicationStatus    @default(PENDING)
  jobPostFormAnswers JobPostFormAnswers[]

  @@map("applications")
}

model JobPostForm {
  id                 Int                  @id @default(autoincrement())
  requireCV          Boolean
  questions          Question[]
  jobPostFormAnswers JobPostFormAnswers[]
  jobPostId          Int                  @unique
  jobPost            JobPost              @relation(fields: [jobPostId], references: [id])

  @@map("job_post_forms")
}

model Question {
  id              Int                 @id @default(autoincrement())
  label           String
  isRequired      Boolean
  jobPostFormId   Int
  jobPostForm     JobPostForm         @relation(fields: [jobPostFormId], references: [id])
  type            JobPostQuestionType
  questionOptions QuestionOptions[]
  answers         Answer[]

  @@map("questions")
}

model QuestionOptions {
  id         Int      @id @default(autoincrement())
  value      String
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])

  @@map("radio_question_options")
}

model Answer {
  id                   Int                @id @default(autoincrement())
  jobPostFormAnswersId Int
  jobPostFormAnswers   JobPostFormAnswers @relation(fields: [jobPostFormAnswersId], references: [id])
  questionId           Int
  question             Question           @relation(fields: [questionId], references: [id])

  @@map("answers")
}

model JobPostFormAnswers {
  id            Int         @id @default(autoincrement())
  answers       Answer[]
  jobPostFormId Int
  jobPostForm   JobPostForm @relation(fields: [jobPostFormId], references: [id])
  applicationId Int
  application   Application @relation(fields: [applicationId], references: [id])

  @@map("job_post_form_answers")
}
